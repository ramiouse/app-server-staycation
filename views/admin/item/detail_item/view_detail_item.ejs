<!-- SECTION HEADER -->
<%- include('../../../partials/header.ejs')%>

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../../partials/sidebar.ejs') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../../partials/navbar.ejs') %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- NOTIFY  -->
                            <%- include('../../../partials/message.ejs') %>

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">Detail Item</h1>
                                <!-- End Heading -->

                                <!-- VIEW MODE -->
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item mr-2">
                                        <a class="nav-link btn-primary" href="/admin/item">
                                            <i class="fas fa-arrow-left"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link <%= (alert.actionView == '' || alert.actionView == 'feature' ? 'active' : '') %>"
                                            id="show-feature-tab" data-toggle="tab" href="#show-feature" role="tab"
                                            aria-controls="show-item" aria-selected="true">Show Feature</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link <%= (alert.actionView == 'activity' ? 'active' : '') %>"
                                            id="show-activity-tab" data-toggle="tab" href="#show-activity" role="tab"
                                            aria-controls="show-activity" aria-selected="false">Show
                                            Activity</a>
                                    </li>

                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <%- include('./show_feature.ejs') %>
                                        <%- include('./show_activity.ejs') %>
                                </div>

                        </div>
                        <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../../partials/footer') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('show_modal_activity.ejs') %>
        <%- include('show_modal_feature.ejs') %>
            <%- include('../../../partials/js.ejs') %>
                <script>
                    $(document).ready(function () {
                        // dataTable 'activity'
                        $("#dataTableActivity").dataTable();

                        $("#dataTableActivity").on('click', '.button-updates', function () {
                            let id = $(this).data('id'); // $(this) as this element
                            let name = $(this).data('name'); // $(this) as this element
                            let type = $(this).data('type'); // $(this) as this element
                            $('#edit-modal-activity').modal('show');
                            $('.id').val(id);
                            $('.name').val(name);
                            $('.type').val(type);
                        });

                        // dataTable 'feature' on update function
                        $("#dataTable").on('click', '.button-updates', function () {
                            let id = $(this).data('id'); // $(this) as this element
                            let name = $(this).data('name'); // $(this) as this element
                            let qty = $(this).data('qty'); // $(this) as this element
                            $('#edit-modal').modal('show');
                            $('.id').val(id);
                            $('.name').val(name);
                            $('.qty').val(qty);
                        });



                    });
                    CKEDITOR.replace('description');
                </script>