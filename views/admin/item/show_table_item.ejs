<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Country</th>
                            <th>City</th>
                            <!-- <th>IsPopular</th> -->
                            <!-- <th>Description</th> -->
                            <!-- <th>ImageId</th> -->
                            <!-- <th>FeaturedId</th> -->
                            <!-- <th>ActivityId</th> -->
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < item.length; i++) { %>
                            <tr>
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= item[i].title %>
                                </td>
                                <td>
                                    $ <%= item[i].price %>
                                </td>
                                <td>
                                    <%= item[i].country %>
                                </td>
                                <td>
                                    <%= item[i].city %>
                                </td>
                                <td>
                                    <!-- /admin : '/' pass all 'params' before of admin route uri -->
                                    <form
                                        action="/admin/item/<%= item[i].id %>/<%= item[i].categoryId.id %>?_method=DELETE"
                                        method="POST">

                                        <!-- show detail image -->
                                        <a href="/admin/item/show-image/<%= item[i].id %>"
                                            class="btn btn-info btn-circle btn-sm" data-id="<%= item[i].id %>">
                                            <i class="fas fa-image"></i>
                                        </a>

                                        <!-- edit -->
                                        <a href="/admin/item/<%= item[i].id %>" type="button"
                                            class="btn btn-warning btn-circle btn-sm" data-id="<%= item[i].id %>"><i
                                                class="fas fa-edit"></i></a>

                                        <!-- submit delete -->
                                        <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                                                class="fas fa-trash"></i></button>

                                        <!-- add image -->
                                        <a href="/admin/item/show-detail-item/<%= item[i].id %>"
                                            class="btn btn-info btn-circle btn-sm" data-id="<%= item[i].id %>">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>