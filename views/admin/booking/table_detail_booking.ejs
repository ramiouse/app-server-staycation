<div class="tab-pane fade show active" id="detail-booking" role="tabpanel" aria-labelledby="detail-booking-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="https://admin-staycation-new.herokuapp.com/<%= booking.payments.proofPayment %>"
                        alt="image" style="width: 100%; display: block;">
                    <% if(booking.payments.status=="process" ) { %>
                        <div class="row" style="padding: 0 0 1.25rem 1.25rem">
                            <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="POST">
                                <button type="submit" class="btn btn-success btn-md"><i class="fas fa-check"></i>
                                    &nbsp;Confirmation
                                </button>
                            </form>
                            <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" class="ml-2"
                                method="POST">
                                <button type="submit" class="btn btn-danger btn-md"><i class="fas fa-times"></i>
                                    &nbsp; Reject
                                </button>
                            </form>
                        </div>
                        <% } %>

                </div>
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Total</th>
                                    <th>Bank From</th>
                                    <th>Title</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= booking.memberId.firstName %>
                                            <%= booking.memberId.lastName %>
                                    </td>
                                    <td>
                                        $ <%= booking.total %>
                                    </td>
                                    <td>
                                        <%= booking.payments.bankFrom %>
                                    </td>
                                    <td>
                                        <%= booking.itemId.title %>
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>